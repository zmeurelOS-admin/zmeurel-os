              id="email"
              {...form.register('email')}
              placeholder="Ex: contact@restaurant.ro"
              type="email"
              style={{ backgroundColor: 'white', color: 'black' }}
            />
            {form.formState.errors.email && (
              <p className="text-xs text-red-500">
                {form.formState.errors.email.message}
              </p>
            )}
          </div>

          {/* AdresƒÉ */}
          <div className="space-y-1">
            <Label htmlFor="adresa" className="text-sm">AdresƒÉ</Label>
            <Textarea
              id="adresa"
              {...form.register('adresa')}
              placeholder="Ex: Str. PrincipalƒÉ nr. 10, Suceava"
              rows={2}
              style={{ backgroundColor: 'white', color: 'black' }}
            />
          </div>

          {/* Pre»õ Negociat */}
          <div className="space-y-1">
            <Label htmlFor="pret_negociat_lei_kg" className="text-sm">
              Pre»õ Negociat (lei/kg)
            </Label>
            <Input
              id="pret_negociat_lei_kg"
              {...form.register('pret_negociat_lei_kg')}
              type="number"
              step="0.01"
              min="0"
              placeholder="Ex: 12.50"
              style={{ backgroundColor: 'white', color: 'black' }}
            />
            <p className="text-xs text-gray-500">
              LasƒÉ gol pentru pre»õ standard
            </p>
          </div>

          {/* Observa»õii */}
          <div className="space-y-1">
            <Label htmlFor="observatii" className="text-sm">Observa»õii</Label>
            <Textarea
              id="observatii"
              {...form.register('observatii')}
              placeholder="Ex: Are 15 lƒÉdi»õe returnabile"
              rows={2}
              style={{ backgroundColor: 'white', color: 'black' }}
            />
          </div>

          <DialogFooter className="pt-2">
            <Button
              type="button"
              variant="outline"
              onClick={() => onOpenChange(false)}
              disabled={isSubmitting}
            >
              AnuleazƒÉ
            </Button>
            <Button
              type="submit"
              disabled={isSubmitting}
              style={{ backgroundColor: '#F16B6B', color: 'white' }}
            >
              {isSubmitting ? (
                <>
                  <Loader2 className="mr-2 h-4 w-4 animate-spin" />
                  Se salveazƒÉ...
                </>
              ) : (
                'SalveazƒÉ Client'
              )}
            </Button>
          </DialogFooter>
        </form>
      </DialogContent>
    </Dialog>
  );
}
