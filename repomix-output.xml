import { useQueryClient } from '@tanstack/react-query';
import { createClient } from '@/lib/supabase/client';

export default function LogoutButton() {
  const router = useRouter();
  const queryClient = useQueryClient();
  const [isLoading, setIsLoading] = useState(false);

  const handleLogout = async () => {
    console.log('üî¥ Logout clicked');

    try {
      setIsLoading(true);

      const supabase = createClient();

      // STEP 1: Sign out from Supabase
      const { error } = await supabase.auth.signOut();

      if (error) {
        console.error('‚ùå Eroare logout:', error);
        alert('Eroare la deconectare. √éncearcƒÉ din nou.');
        return;
      }

      console.log('‚úÖ Supabase signOut successful');

      // STEP 2: Cancel ongoing queries
      await queryClient.cancelQueries();

      // STEP 3: Clear React Query cache
      queryClient.clear();

      console.log('üßπ Cache cleared');

      // STEP 4: Hard redirect (complete reset)
      window.location.href = '/login';

    } catch (err) {
      console.error('‚ùå Eroare logout:', err);
      alert('Eroare la deconectare. √éncearcƒÉ din nou.');
    } finally {
      setIsLoading(false);
    }
  };

  return (
    <button
      type="button"
