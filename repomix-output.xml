            >
              <SelectTrigger className="min-h-[48px] rounded-xl">
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="Activ">Activ</SelectItem>
                <SelectItem value="Inactiv">Inactiv</SelectItem>
                <SelectItem value="√én PregƒÉtire">√én PregƒÉtire</SelectItem>
              </SelectContent>
